{
  "name": "candivoc",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build --mode analyze",
    "build:ci": "./scripts/ci-build.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "vitest run --config=vitest.e2e.config.ts",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:ui": "playwright test --ui",
    "test:e2e:playwright:debug": "playwright test --debug",
    "test:e2e:playwright:codegen": "playwright codegen",
    "test:e2e:playwright:report": "playwright show-report",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --outputFile=test-results.json",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm audit --json",
    "bundle:check": "node scripts/check-bundle-size.js",
    "bundle:analyze": "npx vite-bundle-analyzer dist/stats.json",
    "ci:build": "./scripts/ci-build.sh",
    "ci:test": "npm run lint && npm run type-check && npm run test:ci",
    "ci:security": "npm run security:audit && npm run bundle:check",
    "release:version": "npm version",
    "release:notes": "node scripts/generate-changelog.js",
    "deploy:staging": "npm run build && echo 'Deploy to staging...'",
    "deploy:production": "npm run build && echo 'Deploy to production...'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/react": "^10.22.0",
    "@sentry/tracing": "^7.120.4",
    "@sentry/vite-plugin": "^4.5.0",
    "@supabase/supabase-js": "^2.75.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.133.36",
    "@tanstack/router-devtools": "^1.133.36",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.546.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-backgrounds": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/addon-onboarding": "^9.1.15",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/react-vite": "^9.1.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-storybook": "^9.1.15",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "storybook": "^9.1.15",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.3"
  }
}
